<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper"
    tools:context="com.ajgarcia.book_student.student">


    <EditText
        android:id="@+id/e_book"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:background="@drawable/round"
        android:drawableLeft="@drawable/ic_action_name"
        android:ems="10"
        android:hint="Student ID"
        android:inputType="textPersonName|number" />

    <EditText
        android:id="@+id/e_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/e_book"
        android:layout_alignStart="@+id/e_book"
        android:layout_below="@+id/e_book"
        android:layout_marginTop="30dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="Name"
        android:drawableLeft="@drawable/ic_action_id"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/e_author"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/e_name"
        android:layout_alignStart="@+id/e_name"
        android:layout_below="@+id/e_name"
        android:layout_marginTop="30dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="Course"
        android:drawableLeft="@drawable/ic_action_course"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/e_pub"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/e_author"
        android:layout_alignStart="@+id/e_author"
        android:layout_below="@+id/e_author"
        android:layout_marginTop="30dp"
        android:background="@drawable/round"
        android:ems="10"
        android:hint="Sex"
        android:drawableLeft="@drawable/ic_action_sex"
        android:inputType="textPersonName" />
    <Spinner
        android:id="@+id/e_spinner"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/round"
        android:layout_below="@+id/e_pub"
        android:layout_alignLeft="@+id/e_pub"
        android:layout_alignStart="@+id/e_pub"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:background="@drawable/shape"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/e_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:layout_alignBaseline="@+id/btnAdd"
        android:layout_alignBottom="@+id/btnAdd"
        android:layout_toRightOf="@+id/btnAdd"
        android:layout_toEndOf="@+id/btnAdd"
        android:background="@drawable/shape"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:background="@drawable/shape"
        android:layout_alignBaseline="@+id/btnView"
        android:layout_alignBottom="@+id/btnView"
        android:layout_toRightOf="@+id/btnView"
        android:layout_toEndOf="@+id/btnView" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"

        android:background="@drawable/shape"
        android:layout_alignBaseline="@+id/btnUpdate"
        android:layout_alignBottom="@+id/btnUpdate"
        android:layout_toRightOf="@+id/btnUpdate"
        android:layout_toEndOf="@+id/btnUpdate" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="500dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/student"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
